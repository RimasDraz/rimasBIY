<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#543740"
    android:backgroundTint="#493036"
    tools:context=".HomeScreen">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="243dp"
        android:layout_height="236dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="152dp" />

    <Button
        android:id="@+id/btnRe"
        android:layout_width="506dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#62424A"
        android:text="The Recipes"
        android:textColorLink="#00E5FF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="544dp" />

    <SearchView
        android:id="@+id/searchh"
        android:layout_width="506dp"
        android:layout_height="wrap_content"
        android:background="#FFC9C9"
        android:backgroundTint="#62424A"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="443dp" />

    <Button
        android:id="@+id/btnFav"
        android:layout_width="506dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#62424A"
        android:text="Favorites"
        android:textColorLink="#C17B7B"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="646dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/adFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="434dp"
        tools:layout_editor_absoluteY="826dp" />

    <TextView
        android:id="@+id/texthome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="                 Home"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>